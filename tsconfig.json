{
    "compilerOptions": {
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "resolveJsonModule": true,
        "baseUrl": ".",
        "paths": {
            "@projectRoot/*": [
                "*"
            ],
            "@handlers/*": [
                "handlers/*"
            ],
            "@api/*": [
                "api/*"
            ],
            "@routes/*": [
                "routes/*"
            ],
            "@utils/*": [
                "utils/*"
            ],
            "@data/*": [
                "data/*"
            ],
            "@template/*": [
                "template/*"
            ]
        }
    }
}